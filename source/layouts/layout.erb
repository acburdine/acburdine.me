<!doctype html>
<html>
    <head>
        <meta charset="utf-8">

        <!-- Always force latest IE rendering engine or request Chrome Frame -->
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Use title if it's in the page YAML frontmatter -->
        <title><%= current_page.data.title || "Austin Burdine" %> | acburdine.me</title>

        <link href='https://fonts.googleapis.com/css?family=Lato:400,300,100,300italic' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

        <%= stylesheet_link_tag "site" %>
    </head>

    <body class="<%= page_classes %>">
        <div class="container">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main_nav" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">Austin Burdine | acburdine.me</a>
                    </div>

                    <div class="collapse navbar-collapse" id="main_nav">
                        <ul class="nav navbar-nav navbar-right">
                            <%= page_link('about', '/about/') %>
                            <%= page_link('projects', '/projects/') %>
                            <%= page_link('portfolio', '/portfolio/') %>
                            <%= page_link('contact', '/contact/') %>
                            <%= page_link('blog', 'https://blog.acburdine.me/') %>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="content">
                <%= yield %>
            </div>

            <footer class="site-footer">
                <div class="social-icons">
                    <a href="https://github.com/acburdine/" target="_blank">
                        <i class="fa fa-github-square fa-fw"></i>
                    </a>

                    <a href="https://linkedin.com/in/acburdine/" target="_blank">
                        <i class="fa fa-linkedin-square fa-fw"></i>
                    </a>

                    <a href="https://twitter.com/acburdine/" target="_blank">
                        <i class="fa fa-twitter-square fa-fw"></i>
                    </a>

                    <a href="mailto:austin@acburdine.me">
                        <i class="fa fa-envelope fa-fw"></i>
                    </a>
                </div>
            </footer>
        </div>

        <%= javascript_include_tag  "site" %>
    </body>
</html>
